<?xml version="1.0" encoding="utf-8"?>
<!-- This XML layout represents the layout for adding a new item to the TO-DO list -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_item"
    android:orientation="vertical"
    android:id="@+id/linear_layout_add_item_xml">

    <!-- TextView to prompt the user to enter the task -->
    <TextView
        android:id="@+id/add_item_tv_display_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/enter_your_task"
        android:textSize="34sp" />

    <!-- EditText to input the new task -->
    <EditText
        android:id="@+id/add_item_et_additem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <!-- Button to add the new task to the list -->
    <Button
        android:id="@+id/add_item_btn_addbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="#FBFBFB" />
</LinearLayout>
